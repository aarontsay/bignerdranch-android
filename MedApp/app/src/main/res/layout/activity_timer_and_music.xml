        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp"
        android:ems="10"
        android:padding="10dp"/>
-->

    <EditText
        android:id="@+id/user_timer_hour_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="2"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:hint="@string/zerozero"
        android:clickable="true"
        android:inputType="time"
        android:layout_below="@id/cyan1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp"
        android:ems="2"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/user_timer_minute_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="2"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:hint="@string/zerozero"
        android:clickable="true"
        android:inputType="time"
        android:layout_below="@id/cyan1"

        android:layout_toLeftOf="@id/user_timer_hour_input"
        android:layout_toStartOf="@id/user_timer_hour_input"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp"
        android:ems="2"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/user_timer_second_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="2"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:hint="@string/zerozero"
        android:clickable="true"
        android:inputType="time"
        android:layout_below="@id/cyan1"
        android:layout_toRightOf="@id/user_timer_hour_input"
        android:layout_toEndOf="@id/user_timer_hour_input"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp"
        android:ems="2"
        android:padding="10dp"/>
