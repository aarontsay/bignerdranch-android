<!-- new edit View test -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_timer_minute_input"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/Pause"
        android:id="@+id/pause_button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/pause_button"
        android:layout_toStartOf="@id/pause_button"
        android:layout_alignTop="@id/pause_button"
        android:text="@string/Play"
        android:id="@+id/play_button" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pause_button"
        android:layout_toEndOf="@id/pause_button"
        android:layout_alignTop="@id/pause_button"
        android:text="@string/Stop"
        android:id="@+id/stop_button"/>
</RelativeLayout>

